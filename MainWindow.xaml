<Window x:Class="Work1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work1"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto" KeyDown="Window_KeyDown" SizeToContent="WidthAndHeight">
    <Grid>
        <Canvas Name="Screen" Background="Transparent" SnapsToDevicePixels="True" MouseDown="Screen_MouseDown" MouseMove="Screen_MouseMove" Height="640" Width="800" VerticalAlignment="Top" MouseEnter="Screen_MouseEnter" Margin="0,0,0,0">
            
        </Canvas>

    </Grid>
</Window>
