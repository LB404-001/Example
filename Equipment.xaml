<Window x:Class="Work1.EquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work1"
        mc:Ignorable="d"
        Title="Equipment" Height="auto" Width="auto" SizeToContent="WidthAndHeight">
    
        <Grid x:Name="MainGrid" Height="360" Width="360">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label x:Name="PlayerNameLabel" Grid.Row="0" Grid.Column="0" Content="Player"/>
            <Label Grid.Row="0" Grid.Column="2" Content="Equipment"/>
        <ListBox x:Name="InventoryItems" Margin="10,10,10,10" Grid.Row="1" Grid.Column="0">
        </ListBox>
        <Grid x:Name="EquipmentGrid" Grid.Row="1" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="32"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Content="Weapon:"/>
            <Label x:Name="LabelWeaponName" Grid.Column="1" Grid.Row="0" Content=""/>
        </Grid>
        <Grid x:Name="ControlGrid" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="EquipmentButton" Content="Equip" Height="32" Margin="0,139,0,189" Click="EquipmentButton_Click"/>
            <Button x:Name="TakeOffButton" Content="Take off" Height="32" Margin="0,176,0,152" Click="TakeOffButton_Click"/>
        </Grid>
    </Grid>
</Window>
